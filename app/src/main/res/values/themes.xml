<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Darts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/board_green</item>
        <item name="colorPrimaryVariant">@color/board_green</item>
        <item name="colorOnPrimary">@color/board_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/board_red</item>
        <item name="colorSecondaryVariant">@color/board_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusbarColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Darts.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/board_green</item>
        <item name="colorPrimaryVariant">@color/board_green</item>
        <item name="colorOnPrimary">@color/board_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/board_red</item>
        <item name="colorSecondaryVariant">@color/board_red</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="SliderLabel" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/SliderLabelTextAppearance</item>
    </style>

    <style name="SliderLabelTextAppearance" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>